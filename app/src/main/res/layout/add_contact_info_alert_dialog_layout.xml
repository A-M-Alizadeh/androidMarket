<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->

    <AutoCompleteTextView
        android:id="@+id/contactInfo_dialog_city_auto_tiet_layout_id"
        android:layout_width="match_parent"
        android:completionThreshold="2"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="تهران"
        android:inputType="text"
        android:textSize="@dimen/small_font_size"
        android:maxLength="40"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/contactInfo_dialog_address_tiet_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contactInfo_dialog_address_tiet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="آدرس خود را وارد کنید"
            android:textSize="@dimen/normal_font_size"
            android:inputType="text"
            android:maxLength="100" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/contactInfo_dialog_postalCode_tiet_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contactInfo_dialog_postalCode_tiet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="کد پستی خود را وارد کنید"
            android:textSize="@dimen/normal_font_size"
            android:inputType="numberDecimal"
            android:maxLength="10" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/contactInfo_dialog_mobileNo_tiet_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contactInfo_dialog_mobileNo_tiet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="شماره موبایل خود را وارد کنید"
            android:textSize="@dimen/normal_font_size"
            android:inputType="numberDecimal"
            android:maxLength="11" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/contactInfo_dialog_phoneNo_tiet_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contactInfo_dialog_phoneNo_tiet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="شماره تلفن خود را وارد کنید"
            android:textSize="@dimen/normal_font_size"
            android:inputType="numberDecimal"
            android:maxLength="8" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/contactInfo_dialog_email_tiet_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contactInfo_email_phoneNo_tiet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ایمیل خود را وارد کنید"
            android:textSize="@dimen/normal_font_size"
            android:inputType="text"
            android:maxLength="40" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_contactInfAdd_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/cancel_button_style"
            android:text="لغو"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/normal_font_size" />

        <Button
            android:id="@+id/add_contactInfo_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/buy_button_style"
            android:text="ثبت"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/normal_font_size" />

    </LinearLayout>
    <!--</LinearLayout>-->
    <!--</ScrollView>-->
</LinearLayout>