<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="145dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/distance_4dp"
    android:elevation="@dimen/distance_4dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="@dimen/standard_least_distance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/plan_img_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:lineSpacingExtra="@dimen/standard_least_distance"
            android:id="@+id/plan_name_txt_id"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/small_font_size"
            android:gravity="center_horizontal|center_vertical"
            android:background="#9a000000"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>