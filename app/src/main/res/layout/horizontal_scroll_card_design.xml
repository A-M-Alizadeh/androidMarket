<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    >

    <RelativeLayout
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:id="@+id/touch_layout_id"
        >

        <ImageView
            android:src="@drawable/item1"
            android:clickable="true"
            android:id="@+id/card_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/distance_4dp"
            android:layout_marginBottom="@dimen/standard_least_distance"
            android:layout_marginRight="@dimen/distance_4dp"
            android:layout_centerHorizontal="true"
            />
        <View
            android:layout_below="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgrnd"/>

        <TextView
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/standard_margin"
            android:id="@+id/prd_name_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/card_image"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/secondary_text_gray"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            />

        <!--<com.iarcuschin.simpleratingbar.SimpleRatingBar-->
            <!--android:id="@+id/prd_rateBar_id"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_margin="2dp"-->
            <!--android:layout_below="@+id/prd_name_txt_id"-->
            <!--app:srb_borderColor="@color/white"-->
            <!--app:srb_fillColor="@color/star_full_color"-->
            <!--app:srb_isIndicator="true"-->
            <!--app:srb_numberOfStars="5"-->
            <!--app:srb_rating="3.5"-->
            <!--app:srb_starBackgroundColor="@color/star_empty_color"-->
            <!--app:srb_starSize="20dp"-->
            <!--app:srb_starsSeparation="1dp"-->
            <!--app:srb_stepSize="0.1" />-->

        <TextView
            android:id="@+id/prd_depricated_price_txt_id"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            android:layout_above="@+id/prd_price_txt_id"
            android:textSize="@dimen/small_font_size"
            android:textColor="@color/depricated_price"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tooman_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/prd_depricated_price_txt_id"
            android:layout_alignBottom="@+id/prd_depricated_price_txt_id"
            android:layout_alignStart="@+id/textView2"
            android:maxLines="1"
            android:text="تومان"
            android:textColor="@color/depricated_price"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:id="@+id/prd_price_txt_id"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/large_font_size"
            android:textColor="@color/primary_text_black"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:text="تومان"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/prd_name_txt_id"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/primary_text_black"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/prd_price_txt_id"
            android:id="@+id/textView2" />

    </RelativeLayout>

</android.support.v7.widget.CardView>