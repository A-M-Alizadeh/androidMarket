<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/department_activity_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aalizade.mbazar_base_app.activities.basic_parts.ProductsDepartmentActivity"
    android:layoutDirection="rtl"
    >

    <include
        android:id="@+id/progress_wrapper_id"
        layout="@layout/global_progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


        <android.support.design.widget.TabLayout
            android:id="@+id/department_tablayout_id"
            style="@style/MyTabLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:tabBackground="@drawable/tab_selector"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            android:elevation="6dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            android:layoutDirection="ltr"
            />

    <android.support.v4.view.ViewPager
        android:id="@+id/department_viewpager_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/department_tablayout_id"
         />

</RelativeLayout>

