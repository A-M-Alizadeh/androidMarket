<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_beck_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@color/colorPrimaryDark"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header_profile_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/standard_margin_X2"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"/>

    <TextView
        android:id="@+id/login_signin_header_link_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nav_beck_img"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/standard_margin_X2"
        android:text="ورود / ثبت نام"
        android:textColor="@color/icons_white" />
    <TextView
        android:id="@+id/signed_user_name_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nav_beck_img"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/standard_margin_X2"
        android:text="خوش آمدید"
        android:textColor="@color/icons_white"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/mbazar_name_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_margin="@dimen/standard_margin"
        >
        <TextView
            android:id="@+id/mbazar_fa_name_txtView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nav_beck_img"
            android:layout_margin="@dimen/standard_margin"
            android:textSize="@dimen/large_font_size"
            android:text="بازار اعضــــا"
            android:textColor="@color/icons_white" />
        <TextView
            android:id="@+id/mbazar_en_name_txtView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:textSize="@dimen/large_font_size"
            android:text="MBAZAR.IR"
            android:textColor="@color/before_buy_btn_color2" />

    </LinearLayout>

</RelativeLayout>