            android:layout_height="24dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="#ff0000FF"
            android:layout_marginLeft="@dimen/standard_margin"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/primary_text_black"
            android:layout_marginLeft="@dimen/standard_margin"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="انتخاب عرضه کننده و ضمانت نامه"
        android:textSize="@dimen/large_font_size"
        android:textColor="@color/secondary_text_gray"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        />

    <Spinner
        android:id="@+id/presenter_spinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkout_reciever_mibilenum_et_id"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/spinner_border"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:entries="@array/presenter_names"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        />

    <Spinner
        android:id="@+id/guaranty_spinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkout_reciever_mibilenum_et_id"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/spinner_border"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
