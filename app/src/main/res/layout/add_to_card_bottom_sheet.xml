            android:text="59000 تومان"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/normal_font_size"
            android:textColor="@color/secondary_text_gray"
            android:layout_margin="@dimen/standard_margin"
            />
        <TextView
            android:id="@+id/pay_title_bsh_id"
            android:maxLines="1"
            android:layout_below="@+id/bargin_title_bsh_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مبلغ قابل پرداخت"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/large_font_size"
            android:textColor="@color/primary_text_black"
            android:layout_margin="@dimen/standard_margin"
            />
        <TextView
            android:id="@+id/pay_bsh_id"
            android:maxLines="1"
            android:layout_below="@+id/bargin_bsh_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="503000 تومان"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/large_font_size"
            android:textColor="@color/primary_text_black"
            android:layout_margin="@dimen/standard_margin"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/but_bsh_bottom_button_layout_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/before_buy_btn_color2"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        >
        <ImageView
