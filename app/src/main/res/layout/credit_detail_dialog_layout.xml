<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:elevation="@dimen/distance_4dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/standard_least_distance"
    app:cardElevation="@dimen/distance_4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_margin="@dimen/default_margin">

        <TextView
            android:id="@+id/detail_id_title_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="شناسه:"
            android:textColor="@color/secondary_text_gray"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/detail_id_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detail_id_title_txt_id"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="11"
            android:textColor="@color/primary_text_black"
            android:textSize="@dimen/normal_font_size" />

        <View
            android:id="@+id/divider_1_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/detail_id_title_txt_id"
            android:layout_margin="@dimen/standard_least_distance"
            android:background="@color/divider" />
        <!--// second line-->

        <TextView
            android:id="@+id/tracking_code_title_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider_1_id"
            android:layout_margin="@dimen/distance_4dp"
            android:text="مانده اعتبار:"
            android:textColor="@color/secondary_text_gray"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/remain_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tracking_code_title_txt_id"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="MBZ1001"
            android:textColor="@color/primary_text_black"
            android:textSize="@dimen/normal_font_size" />

        <View
            android:id="@+id/divider_2_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tracking_code_title_txt_id"
            android:layout_margin="@dimen/standard_least_distance"
            android:background="@color/divider" />

        <!--//third line-->

        <TextView
            android:id="@+id/type_title_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider_2_id"
            android:layout_margin="@dimen/distance_4dp"
            android:text="نوع:"
            android:textColor="@color/secondary_text_gray"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/type_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/type_title_txt_id"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="عادی"
            android:textColor="@color/primary_text_black"
            android:textSize="@dimen/normal_font_size" />

        <View
            android:id="@+id/divider_3_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/type_title_txt_id"
            android:layout_margin="@dimen/standard_least_distance"
            android:background="@color/divider" />

        <!--//fourth line-->

        <TextView
            android:id="@+id/req_date_title_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider_3_id"
            android:layout_margin="@dimen/distance_4dp"
            android:text="عنوان گروه محصول:"
            android:textColor="@color/secondary_text_gray"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/product_group_title_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/req_date_title_txt_id"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="1396/09/12"
            android:textColor="@color/primary_text_black"
            android:textSize="@dimen/normal_font_size" />

        <View
            android:id="@+id/divider_4_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/req_date_title_txt_id"
            android:layout_margin="@dimen/standard_least_distance"
            android:background="@color/divider" />

        <!--//fifth line-->

        <TextView
            android:id="@+id/accept_reject_date_title_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider_4_id"
            android:layout_margin="@dimen/distance_4dp"
            android:text="آخرین تاریخ عملیات:"
            android:textColor="@color/secondary_text_gray"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/accept_reject_date_title_txt_id"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="1396/10/01"
            android:textColor="@color/primary_text_black"
            android:textSize="@dimen/normal_font_size" />

        <View
            android:id="@+id/divider_5_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/accept_reject_date_title_txt_id"
            android:layout_margin="@dimen/standard_least_distance"
            android:background="@color/divider" />

        <!--//sixth line-->

        <TextView
            android:id="@+id/status_title_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider_5_id"
            android:layout_margin="@dimen/distance_4dp"
            android:text="کلمه کاربری اهدا کننده:"
            android:textColor="@color/secondary_text_gray"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/username_ehda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/status_title_txt_id"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/distance_4dp"
            android:text="تایید شده"
            android:textColor="@color/primary_text_black"
            android:textSize="@dimen/normal_font_size" />
    </RelativeLayout>


</android.support.v7.widget.CardView>