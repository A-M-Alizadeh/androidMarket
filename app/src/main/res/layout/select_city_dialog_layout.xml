<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:layout_gravity="center"
    android:background="@drawable/back_bitmap"
    android:gravity="center">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iran_map_img_id"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/iran_map_png"
        android:layout_margin="@dimen/standard_margin"
        />

    <!--android:background="@drawable/simple_edittext_border"-->
    <AutoCompleteTextView
        android:layout_below="@+id/iran_map_img_id"
        android:id="@+id/autocomplete_complete_city_view_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="شهر مورد نظر خود را جستجو کنید"
        android:textSize="@dimen/normal_font_size"
        android:textColor="@color/primary_text_black"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/simple_edittext_border"
        android:paddingRight="@dimen/standard_margin"
        />

</RelativeLayout>