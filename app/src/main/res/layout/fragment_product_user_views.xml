<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrnd"
    android:layoutDirection="rtl"
    tools:context="com.example.aalizade.mbazar_base_app.fragments.ProductUserViewsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/standard_margin"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="40"
                android:maxLines="1"
                android:singleLine="true"
                android:text="ساعت مچی عقربه ای مردانه کاسیو جی شاک مدل"
                android:textColor="@color/black"
                android:textSize="@dimen/large_font_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--//5 rate number-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/rate5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="3dp"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_font_size" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/one_byone_5rate_rows_id"
                            android:layout_width="100dp"
                            android:layout_height="5dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:rotationY="180"
                            app:rcBackgroundColor="@color/cardview_dark_background"
                            app:rcBackgroundPadding="0dp"
                            app:rcMax="5.0"
                            app:rcProgress="3.7"
                            app:rcProgressColor="@color/star_full_color"
                            app:rcRadius="2dp"
                            app:rcReverse="true"
                            app:rcSecondaryProgress="2.5"
                            app:rcSecondaryProgressColor="@color/cardview_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="@dimen/standard_margin"
                            android:layout_marginTop="3dp"
                            android:text="(9)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_font_size" />
                    </RelativeLayout>
                    <!--//5 rate number-->
                    <!--//4 rate number-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
