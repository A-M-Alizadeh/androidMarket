                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:rotationY="180"
                            app:rcBackgroundColor="@color/cardview_dark_background"
                            app:rcBackgroundPadding="0dp"
                            app:rcMax="5.0"
                            app:rcProgress="3.7"
                            app:rcProgressColor="@color/star_full_color"
