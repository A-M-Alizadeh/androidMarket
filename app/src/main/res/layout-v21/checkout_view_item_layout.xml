<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/distance_4dp"
    android:elevation="@dimen/distance_4dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/standard_least_distance"
    app:cardElevation="@dimen/standard_least_distance"
    tools:targetApi="lollipop">

    <LinearLayout
        android:id="@+id/bon_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/standard_least_distance">

        <!--//code and type-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="کد رهگیری"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@color/secondary_text_gray"
                    android:layout_margin="@dimen/distance_4dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/checkout_view_code"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="عادی"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_black"
                    android:layout_margin="@dimen/distance_4dp"
                    android:layoutDirection="rtl"
                    android:gravity="left"
                    />

            </LinearLayout>
        </LinearLayout>
        <!--//code and type-->

        <!--//name and username-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="وضعیت"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@color/secondary_text_gray"
                    android:layout_margin="@dimen/distance_4dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/checkout_view_status"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="عادی"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_black"
                    android:layout_margin="@dimen/distance_4dp"
                    android:layoutDirection="rtl"
                    android:gravity="left"
                    />

            </LinearLayout>
        </LinearLayout>

        <!--//name and username-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E824C"
            />
        <!--//dates-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تاریخ سفارش"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@color/secondary_text_gray"
                    android:layout_margin="@dimen/distance_4dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/checkout_view_register_date"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1397/02/12"
                    android:textColor="@color/primary_text_black"
                    android:layout_margin="@dimen/distance_4dp"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="پرداخت نهایی"
                    android:textSize="@dimen/normal_font_size"
                    android:textColor="@color/secondary_text_gray"
                    android:layout_margin="@dimen/distance_4dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/checkout_view_clearing_date"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1397/02/12"
                    android:textColor="@color/primary_text_black"
                    android:layout_margin="@dimen/distance_4dp"
                    android:gravity="left"
                    android:textSize="13sp"
                    />

            </LinearLayout>
        </LinearLayout>
        <!--//dates-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/date_layout_id"
            android:layout_marginBottom="@dimen/standard_least_distance"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/checkout_view_carrier_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_least_distance"
                android:layout_marginLeft="@dimen/standard_least_distance"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/details_item_ic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/standard_least_distance"
                    android:text="گروه های ارسال"
                    android:textColor="@color/primary_text_black"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>